<!DOCTYPE html>
<html>
    <head>
        <title>Paypal</title>
        <%= stylesheet_link_tag    'bootstrap.min' %>
        <%= stylesheet_link_tag    'bootstrap-theme.min' %>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
        <%= javascript_include_tag 'bootstrap.min' %>
        <%= csrf_meta_tags %>
    </head>
    <body>
        <nav role="navigation" class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button data-target="#bs-example-navbar-collapse-1" data-toggle="collapse" class="navbar-toggle" type="button">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="<%= home_index_path %>" class="navbar-brand">Home</a>
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div id="bs-example-navbar-collapse-1" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="<%= products_path %>">Products management</a>
                        </li>
                        <li>
                            <a href="<%= payment_index_path %>">Payments management</a>
                        </li>
                        <li>
                            <a href="<%= payment_new_path %>">Payments Register</a>
                        </li>
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container -->
        </nav>

        <div class="container">
            <% flash.each do |message_type, message| %>
            <div class="alert <% if message_type == 'alert' %>bg-danger text-danger<% else %> bg-success text-success <% end %>">
                <%= message %>
            </div>
            <% end %>
            
            <%= yield %>

            <hr>

            <!-- Footer -->
            <footer>
                <div class="row">
                    <div class="col-lg-12">
                        <p>
                            Copyright &copy; Your Website 2014
                        </p>
                    </div>
                </div>
            </footer>

        </div>

    </body>
</html>
