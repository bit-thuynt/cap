<% render 'form' %>

<p id="notice"><%= notice %></p>

<h1>Listing Payments</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Price</th>
      <th width="30%%">Desc</th>
      <th>Recurring</th>
      <th>Del flg</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= product.name %></td>
        <td><img src="<%= image_path(product.image) %>" height="50" /></td>
        <td><%= number_to_currency(product.price) %></td>
        <td><%= truncate(product.desc, :length => 80) %></td>
        <td><%= product.recurring %></td>
        <td><%= product.del_flg %></td>
        <td><%= link_to 'Show', product , class: "btn btn-success"%></td>
        <td><%= link_to 'Edit', edit_product_path(product) , class: "btn btn-primary"%></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path , class: "btn btn-info"%>

